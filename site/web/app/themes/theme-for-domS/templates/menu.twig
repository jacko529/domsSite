
{% if menu %}

	<ul>
	{% for item in menu %}
		<li class="{{ item.classes | join(' ') }}">
			<a 
				class="nav-link"
				target="{{ item.target }}" 
				href="{{ item.link }}"
			>
					{{ item.title }}</a>
			{% include "menu.twig" with {'menu': item.children} %}
		</li>
	{% endfor %}
	</ul>
	</div>
	<button class="hamburger hamburger--slider" type="button">
		<span class="hamburger-box">
			<span class="hamburger-inner"></span>
		</span>
	</button>
	<div class="overlay">
		<ul>
			{% for item in menu %}
				<li class="{{ item.classes | join(' ') }}">
					<a 
						{# class="{{ post.meta('text_color') }}" #}
						target="{{ item.target }}" 
						href="{{ item.link }}"
					>
							{{ item.title }}</a>
					{% include "menu.twig" with {'menu': item.children} %}
				</li>
			{% endfor %}
		</ul>
{% endif %}




